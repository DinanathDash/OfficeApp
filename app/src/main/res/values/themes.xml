<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.OfficeApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="colorSecondary">@color/primary_blue</item>
        <item name="colorAccent">@color/primary_blue</item>
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="searchViewStyle">@style/CustomSearchView</item>
    </style>

    <style name="Theme.OfficeApp" parent="Base.Theme.OfficeApp" />

    <style name="Theme.OfficeApp.Splash" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">@color/primary_blue</item>
    </style>

    <!-- Theme for Document Viewers (Forced Light Mode) -->
    <style name="Theme.OfficeApp.Viewer" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/viewer_toolbar_color</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/text_primary</item>
        <item name="android:statusBarColor">@color/viewer_toolbar_color</item>
        <item name="android:windowLightStatusBar">true</item> 
        <item name="colorSecondary">@color/primary_blue</item>
        <item name="colorAccent">@color/primary_blue</item>
        <item name="android:windowBackground">@color/bg_gray</item>
        <item name="searchViewStyle">@style/CustomSearchView</item>
    </style>

    <style name="Theme.OfficeApp.Viewer.Word" parent="Theme.OfficeApp.Viewer">
        <item name="colorPrimary">@color/word_primary</item>
        <item name="android:statusBarColor">@color/word_primary</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Theme.OfficeApp.Viewer.Excel" parent="Theme.OfficeApp.Viewer">
        <item name="colorPrimary">@color/excel_primary</item>
        <item name="android:statusBarColor">@color/excel_primary</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Theme.OfficeApp.Viewer.Ppt" parent="Theme.OfficeApp.Viewer">
        <item name="colorPrimary">@color/ppt_primary</item>
        <item name="android:statusBarColor">@color/ppt_primary</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Theme.OfficeApp.Viewer.Pdf" parent="Theme.OfficeApp.Viewer">
        <item name="colorPrimary">@color/viewer_toolbar_color</item>
        <item name="android:statusBarColor">@color/viewer_toolbar_color</item>
    </style>

    <style name="Theme.OfficeApp.Viewer.Txt" parent="Theme.OfficeApp.Viewer">
        <item name="colorPrimary">@color/text_file_primary</item>
        <item name="android:statusBarColor">@color/text_file_primary</item>
    </style>

    <!-- Theme for About Screen -->
    <style name="Theme.OfficeApp.About" parent="Theme.OfficeApp">
        <item name="colorPrimary">@color/viewer_toolbar_color</item>
        <item name="android:statusBarColor">@color/viewer_toolbar_color</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/bg_gray</item>
    </style>

    <!-- About Screen Styles -->
    <style name="OptionItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#E0E0E0</item> <!-- Light Gray Divider -->
    </style>

    <style name="CustomSearchView" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/ic_search</item>
        <item name="searchHintIcon">@null</item>
        <item name="queryHint">Search</item>
    </style>

    <style name="Toolbar.Dark" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="searchViewStyle">@style/CustomSearchView</item>
    </style>
</resources>