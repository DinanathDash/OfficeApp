<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.OfficeApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="colorSecondary">@color/primary_blue</item>
        <item name="colorAccent">@color/primary_blue</item>
        <item name="colorPrimary">@color/primary_blue</item>
    </style>

    <style name="Theme.OfficeApp" parent="Base.Theme.OfficeApp" />

    <style name="Theme.OfficeApp.Splash" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">@color/primary_blue</item>
    </style>

    <!-- Theme for Document Viewers (Forced Light Mode) -->
    <style name="Theme.OfficeApp.Viewer" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/viewer_toolbar_color</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/text_primary</item>
        <item name="android:statusBarColor">@color/viewer_toolbar_color</item>
        <item name="android:windowLightStatusBar">true</item> 
        <item name="colorSecondary">@color/primary_blue</item>
        <item name="colorAccent">@color/primary_blue</item>
        <item name="android:windowBackground">@color/bg_gray</item>
    </style>

    <style name="Theme.OfficeApp.Viewer.Word" parent="Theme.OfficeApp.Viewer">
        <item name="colorPrimary">@color/word_primary</item>
        <item name="android:statusBarColor">@color/word_primary</item>
    </style>

    <style name="Theme.OfficeApp.Viewer.Excel" parent="Theme.OfficeApp.Viewer">
        <item name="colorPrimary">@color/excel_primary</item>
        <item name="android:statusBarColor">@color/excel_primary</item>
    </style>

    <style name="Theme.OfficeApp.Viewer.Ppt" parent="Theme.OfficeApp.Viewer">
        <item name="colorPrimary">@color/ppt_primary</item>
        <item name="android:statusBarColor">@color/ppt_primary</item>
    </style>

    <style name="Theme.OfficeApp.Viewer.Pdf" parent="Theme.OfficeApp.Viewer">
        <item name="colorPrimary">@color/viewer_toolbar_color</item>
        <item name="android:statusBarColor">@color/viewer_toolbar_color</item>
    </style>

    <style name="Theme.OfficeApp.Viewer.Txt" parent="Theme.OfficeApp.Viewer">
        <item name="colorPrimary">@color/text_file_primary</item>
        <item name="android:statusBarColor">@color/text_file_primary</item>
    </style>
</resources>